{
  "name": "botkit-lullabot",
  "version": "1.0.0",
  "description": "",
  "main": "dist/bot.js",
  "scripts": {
    "start": "NODE_ENV=production node dist/bot.js",
    "dev": "NODE_ENV=development nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/bot.ts",
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "test": "jest --forceExit",
    "prepare": "husky"
  },
  "dependencies": {
    "@slack/bolt": "^4.1.1",
    "@slack/types": "^2.14.0",
    "datejs": "^1.0.0-rc3",
    "dotenv": "^17.0.0",
    "pino": "^9.8.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@types/datejs": "^0.0.36",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,ts,md,yml,yaml,sh,json}": [
      "sh -c 'echo \"Checking file: $0\" && ! grep -i -E \"(api[_-]?key|secret|password|token|auth|credential|private[_-]?key)\" \"$0\" || (echo \"‚ùå Potential secret detected in file: $0\" && exit 1)'"
    ]
  }
}
