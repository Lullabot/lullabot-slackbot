{
    "name": "botkit-lullabot",
    "version": "1.0.0",
    "description": "",
    "main": "dist/bot.js",
    "scripts": {
        "start": "NODE_ENV=production node dist/bot.js",
        "dev": "NODE_ENV=development nodemon --watch 'src/**/*.ts' --watch 'src/**/*.mjs' --exec 'ts-node' src/bot.ts",
        "build": "tsc && copyfiles -u 1 src/services/**/*.mjs dist",
        "watch": "tsc -w",
        "clean": "rimraf dist",
        "prebuild": "npm run clean",
        "prestart": "npm run build",
        "test": "jest --forceExit",
        "postinstall": "mkdir -p ./models && rm -f ./models/ggml-model-i2_s.gguf && npx --no node-llama-cpp pull --dir ./models https://huggingface.co/TheBloke/phi-2-GGUF/resolve/main/phi-2.Q4_K_M.gguf"
    },
    "dependencies": {
        "@slack/bolt": "^4.1.1",
        "@slack/types": "^2.14.0",
        "datejs": "^1.0.0-rc3",
        "dotenv": "^16.0.0",
        "node-llama-cpp": "^3.7.0"
    },
    "devDependencies": {
        "@types/datejs": "^0.0.36",
        "@types/jest": "^29.5.0",
        "@types/node": "^22.0.0",
        "copyfiles": "^2.4.1",
        "jest": "^29.5.0",
        "nodemon": "^3.1.7",
        "rimraf": "^6.0.0",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.0",
        "typescript": "^5.0.0"
    }
}
