{
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "plugins": ["json", "prettier"],
    "extends": ["airbnb-base", "prettier", "prettier/react"],
    "rules": {
        "no-use-before-define": ["off", { "functions": true, "classes": true, "variables": true }],
        "object-shorthand": ["error", "consistent"],
        "one-var": ["error", { "initialized": "never" }],

        "prettier/prettier": [
            "error",
            {
                "printWidth": 120,
                "singleQuote": true,
                "tabWidth": 4,
                "trailingComma": "es5"
            }
        ]
    }
}
